<%- include("navbar") %>
<main class="container-fluid">
  <div class="row">
    <div class="col-12 text-center"><h1>Shopping Cart</h1></div>
    <div class="col-12 d-flex flex-column gap-3 align-items-center py-2 px-5">
      <% let sum = 0 %> <% result.forEach((product) => {%> <% sum +=
      product.price %>
      <div class="card mb-3 cardShoppingCart">
        <div class="row g-0 h-100">
          <div class="col-md-4 h-100">
            <img
              src="/images/products/<%= product.product_img %>"
              class="img-fluid rounded-start"
              alt="..."
            />
          </div>
          <div class="col-md-8">
            <div class="card-body  d-flex flex-column h-100">
              <h5 class="card-title"><%= product.product_name %></h5>
              <hr class="allSellersHr" />
              <p class="card-text"><%= product.category %></p>
              <p class="card-text"></p>

              <p class="card-text flex-fill"><%= product.description %></p>
              <p class="card-text align-self-end"><%= product.price %> €</p>

              <div class="d-flex justify-content-between">
                <p class="card-text">
                  <small class="text-muted"><%= product.status %></small>
                </p>
                <a
                  href="/products/removeProductCart/<%= product.product_id %>"
                  class="btn btn-primary allSellerButton d-flex align-items-center"
                >
                  Remove
                  <span class="material-symbols-outlined">
                    shopping_cart
                  </span></a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
      <% })%>
    </div>
    <div class="col-12 d-flex justify-content-center py-2 px-5 ">
      <div class=" totalCartContainer card mb-3 px-3">
        <% if(result.length != 0 ){ %>
        <h3 class="mb-0 px-2 pt-2">Total</h3>
        <hr class="allSellersHr" />
        <h4 class="align-self-end pe-3">
          <%= sum %> <span class="CurrSymbol fs-4">€</span>
        </h4>

        <% } %>
      </div>
    </div>
  </div>
</main>
<%- include("footer") %>
