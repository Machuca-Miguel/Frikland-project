<%- include("navbar") %>
<main class="container-fluid">
  <div class="row">
    <div class="col-12 text-center d-flex flex-column align-items-center mb-0">
      <h1 class="mb-0">Seller profile</h1>
      <hr class="mt-o mb-5 w-50" />
    </div>
    <div class="col-12 d-flex justify-content-center">
      <div class="card  allSellersCard p-3 col-4" style="height: fit-content">
        <div class="row g-0">
          <div class="col-md-4 mb-3">
            <img
              src="/images/avatars/<%= finalResult.profile_img %>"
              class="img-fluid rounded-start allSellerImg"
              alt="..."
            />
          </div>
          <div class="col-md-8 mb-3">
            <div class="card-body">
              <h2 class="card-title">
                <%= finalResult.name %> <%= finalResult.last_name %>
              </h2>
              <hr class="allSellersHr" />
              <p class="card-text">Contact:</p>
              <ul>
                <li>
                  <p class="card-text">Email: <%= finalResult.email %></p>
                </li>
                <li>
                  <p class="card-text">
                    Phone number: <%= finalResult.phone_number %>
                  </p>
                </li>
              </ul>
            </div>
          </div>
          <div class="col-12">
            <p class="card-text">
              Description: <br />
              <%= finalResult.description %>
            </p>
            <div class="col-12 d-flex flex-row justify-content-end gap-1">
              <p class="card-text flex-grow-1 mb-0 align-self-end">
                <small class="text-dark">Last updated 23 mins ago</small>
              </p>
              <a
                href="/products/addProduct/<%= finalResult.seller_id %>"
                class="btn btn-primary allSellerButton align-self-end"
              >
                Add Product</a
              >
              <a
                href="/sellers/modifySeller/<%= finalResult.seller_id %>"
                class="btn btn-primary allSellerButton align-self-end"
              >
                Modify</a
              >
              <a
                href="/sellers/logicDeleteSeller/<%= finalResult.seller_id %>"
                class="btn btn-primary allSellerButton align-self-end"
              >
                Delete</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 text-start ps-5 my-3">
      <% if(finalResult.products.length != 0 ){ %>
      <div class="col-12 d-flex justify-content-between">
        <h2 class="mb-0">Products:</h2>
        <a href="/products/addProduct/<%= finalResult.seller_id %>"
          ><button
            class="btn btn-sm btn-outline-secondary bg-none registerButton me-1 addProductButton"
          >
            Add Product
          </button></a
        >
      </div>

      <hr class="allSellersHr" />
      <% } %>
    </div>
    <div class="col-12 d-flex flex-wrap justify-content-center gap-3">
      <% finalResult.products.forEach(product => { %>

      <div class="card allSellersCard" style="width: 18rem">
        <img
          src="/images/products/<%= product.product_img %>"
          class="card-img-top productImg mb-2"
          alt="..."
        />
        <div class="card-body pt-0 d-flex flex-column align-items-start  w-100">
          <h5 class="card-title"><%= product.product_name %></h5>
          <hr class="allSellersHr mt-0" />
          <p class="card-text"><%= product.category %></p>
          <p class="card-text "><%= product.description %></p>
          <div
            class="d-flex justify-content-end w-100 align-items-center gap-1"
          >
            <p class="card-text mb-0 fw-bold flex-fill">
              <%= product.price %> â‚¬
            </p>
            <a
              href="/products/modifyProduct/<%= product.product_id %>/<%= finalResult.seller_id %>"
              class="btn btn-primary allSellerButton align-self-end"
            >
              Edit</a
            >
            <a
              href="/products/deleteProduct/<%= product.product_id %>/<%= finalResult.seller_id %>"
              class="btn btn-primary allSellerButton align-self-end"
            >
              Delete</a
            >
          </div>
        </div>
      </div>

      <% }) %>
    </div>
  </div>
</main>
<%- include("footer") %>
